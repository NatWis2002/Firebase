rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    // Artykuly — każdy może czytać i pisać
    match /Artykuly/{docId} {
      allow read, write: if true;
    }

    // Komentarze — każdy może czytać i pisać
    match /Komentarze/{docId} {
      allow read, write: if true;
    }

  }
}